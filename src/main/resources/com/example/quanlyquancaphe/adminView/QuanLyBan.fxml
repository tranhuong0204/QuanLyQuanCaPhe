<?import javafx.scene.layout.VBox?>
<AnchorPane styleClass="root" stylesheets="@QuanLyBan.css"
            xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.quanlyquancaphe.controllers.admin.QuanLyBanController"
            AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
            AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">

   <children>
      <!-- Thanh tiêu đề -->
      <HBox alignment="CENTER" styleClass="hbox"
            AnchorPane.topAnchor="14.0" AnchorPane.leftAnchor="15.0"
            AnchorPane.rightAnchor="15.0" prefHeight="64.0">
         <padding>
            <Insets top="10" bottom="10" left="10" right="10"/>
         </padding>
         <children>
            <Label styleClass="label-title" text="Quản Lý Bàn">
               <font>
                  <Font name="System Bold" size="20"/>
               </font>
            </Label>
         </children>
      </HBox>

      <!-- Nội dung chính -->
      <VBox spacing="15"
            AnchorPane.topAnchor="100.0" AnchorPane.leftAnchor="20.0"
            AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0">
         <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
         </padding>

         <!-- Bộ lọc tìm kiếm -->
         <HBox spacing="15">
            <Label text="Trạng thái:" styleClass="label-x"/>
            <ComboBox fx:id="cbTrangThai" prefWidth="120"/>
            <Label text="Vị trí:" styleClass="label-x"/>
            <ComboBox fx:id="cbViTri" prefWidth="120"/>
            <Label text="Số ghế:" styleClass="label-x"/>
            <TextField fx:id="soGhe" prefWidth="60"/>
            <Label text="Tìm nội dung:" styleClass="label-x"/>
            <TextField fx:id="noiDungTim" prefWidth="200"/>
         </HBox>

         <!-- Bảng danh sách bàn -->
         <TableView fx:id="tableBan" VBox.vgrow="ALWAYS">
            <columns>
               <TableColumn fx:id="colMaBan" text="Mã Bàn" prefWidth="100"/>
               <TableColumn fx:id="colViTri" text="Vị Trí" prefWidth="150"/>
               <TableColumn fx:id="colSoGhe" text="Số Ghế" prefWidth="100"/>
               <TableColumn fx:id="colTrangThai" text="Trạng Thái" prefWidth="150"/>
               <TableColumn fx:id="colGhiChu" text="Ghi Chú" prefWidth="300"/>
            </columns>
         </TableView>

         <!-- Các nút thao tác -->
         <HBox spacing="20" alignment="CENTER_RIGHT">
            <Button fx:id="btnThem" text="Thêm" onAction="#onThem"
                    prefWidth="100" prefHeight="35" styleClass="icon-button"/>
            <Button fx:id="btnSua" text="Sửa" onAction="#onSua"
                    prefWidth="100" prefHeight="35" styleClass="icon-button"/>
            <Button fx:id="btnXoa" text="Xóa" onAction="#onXoa"
                    prefWidth="100" prefHeight="35" styleClass="icon-button"/>
         </HBox>
      </VBox>
   </children>
</AnchorPane>

