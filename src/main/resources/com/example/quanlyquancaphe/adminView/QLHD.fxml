<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane fx:controller="com.example.quanlyquancaphe.controllers.admin.QLHDController"
            xmlns:fx="http://javafx.com/fxml/1"
            stylesheets="@QLHD.css">

    <children>
        <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
            <Label text="QUẢN LÝ HÓA ĐƠN" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

            <HBox spacing="10">
                <TextField fx:id="searchField" promptText="Tìm theo mã hoặc ngày lập" HBox.hgrow="ALWAYS"/>
                <Button text="Tìm kiếm" onAction="#handleSearch"/>
            </HBox>

            <TableView fx:id="hoaDonTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colMaHoaDon" text="Mã Hóa Đơn"/>
                    <TableColumn fx:id="colTongKM" text="Tổng KM"/>
                    <TableColumn fx:id="colTongTien" text="Tổng Tiền"/>
                    <TableColumn fx:id="colNgayLap" text="Ngày Lập"/>
                    <TableColumn fx:id="colMaBan" text="Mã Bàn"/>
                    <TableColumn fx:id="colMaTaiKhoan" text="Mã Tài Khoản"/>
                    <TableColumn fx:id="colMaPT" text="Mã PT"/>
                    <TableColumn fx:id="colAction" text="Thao tác"/>
                </columns>
            </TableView>
        </VBox>
    </children>
</AnchorPane>
