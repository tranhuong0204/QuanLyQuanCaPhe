<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.VBox?>
<AnchorPane styleClass="root" stylesheets="@QuanLyTaiKhoan.css"
            xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.quanlyquancaphe.controllers.admin.TaiKhoanController"
            AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
            AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">

    <children>
        <!-- Thanh tiêu đề -->
        <HBox alignment="CENTER" styleClass="hbox"
              AnchorPane.topAnchor="14.0" AnchorPane.leftAnchor="15.0"
              AnchorPane.rightAnchor="15.0" prefHeight="64.0">
            <padding>
                <Insets top="10" bottom="10" left="10" right="10"/>
            </padding>
            <children>
                <Label styleClass="label-title" text="Quản Lý Tài Khoản">
                    <font>
                        <Font name="System Bold" size="20"/>
                    </font>
                </Label>
            </children>
        </HBox>

        <!-- Nội dung chính -->
        <VBox spacing="15"
              AnchorPane.topAnchor="100.0" AnchorPane.leftAnchor="20.0"
              AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- Bộ lọc tìm kiếm -->
            <HBox spacing="15">
                <Label text="Chức vụ:" styleClass="label-x"/>
                <ComboBox fx:id="cbChucVu" prefWidth="120"/>
                <Label text="Tìm nội dung:" styleClass="label-x"/>
                <TextField fx:id="noiDungTim" prefWidth="200"/>
            </HBox>

            <!-- Bảng danh sách tài khoản -->
            <TableView fx:id="tableTaiKhoan" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colMaTaiKhoan" text="Mã Tài Khoản" prefWidth="120"/>
                    <TableColumn fx:id="colTenTaiKhoan" text="Tên Tài Khoản" prefWidth="150"/>
                    <TableColumn fx:id="colMatKhau" text="Mật Khẩu" prefWidth="150"/>
                    <TableColumn fx:id="colChucVu" text="Chức Vụ" prefWidth="200"/>
                </columns>
            </TableView>

            <!-- Các nút thao tác -->
            <HBox spacing="20" alignment="CENTER_RIGHT">
                <Button fx:id="btnThem" text="Tạo" onAction="#onThem"
                        prefWidth="100" prefHeight="35" styleClass="icon-button"/>
                <Button fx:id="btnSua" text="Sửa" onAction="#onSua"
                        prefWidth="100" prefHeight="35" styleClass="icon-button"/>
                <Button fx:id="btnXoa" text="Xóa" onAction="#onXoa"
                        prefWidth="100" prefHeight="35" styleClass="icon-button"/>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
