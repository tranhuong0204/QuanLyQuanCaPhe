<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="360.0" prefWidth="550.0"
            stylesheets="@ThemBan.css"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.quanlyquancaphe.controllers.admin.ThemTaiKhoanController">

    <children>

        <!-- ================== TITLE ================== -->
        <HBox alignment="CENTER"
              AnchorPane.topAnchor="10"
              AnchorPane.leftAnchor="15"
              AnchorPane.rightAnchor="15"
              styleClass="hbox">

            <padding>
                <Insets top="10" bottom="10" left="10" right="10"/>
            </padding>

            <children>
                <Label text="Thêm tài khoản" styleClass="title-top">
                    <font><Font name="System Bold" size="18"/></font>
                </Label>
            </children>
        </HBox>

        <!-- ================== FORM GRID ================== -->
        <GridPane hgap="20" vgap="18"
                  AnchorPane.topAnchor="70"
                  AnchorPane.leftAnchor="40"
                  AnchorPane.rightAnchor="40">

            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" prefWidth="140"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>

            <!-- Mã tài khoản -->
            <Label text="Mã Tài Khoản" styleClass="label-b" GridPane.rowIndex="0" GridPane.columnIndex="0">
                <font><Font size="18"/></font>
            </Label>

            <TextField fx:id="txtMaTK" GridPane.rowIndex="0" GridPane.columnIndex="1" prefHeight="32">
                <font><Font size="14"/></font>
            </TextField>

            <!-- Tên tài khoản -->
            <Label text="Tên Tài Khoản" styleClass="label-b" GridPane.rowIndex="1" GridPane.columnIndex="0">
                <font><Font size="18"/></font>
            </Label>

            <TextField fx:id="txtTenTK" GridPane.rowIndex="1" GridPane.columnIndex="1" prefHeight="32">
                <font><Font size="14"/></font>
            </TextField>

            <!-- Mật khẩu -->
            <Label text="Mật khẩu" styleClass="label-b" GridPane.rowIndex="2" GridPane.columnIndex="0">
                <font><Font size="18"/></font>
            </Label>

            <PasswordField fx:id="txtMatKhau" GridPane.rowIndex="2" GridPane.columnIndex="1" prefHeight="32"/>

            <!-- Chức vụ -->
            <Label text="Chức vụ" styleClass="label-b" GridPane.rowIndex="3" GridPane.columnIndex="0">
                <font><Font size="18"/></font>
            </Label>

            <ComboBox fx:id="cbChucVu" GridPane.rowIndex="3" GridPane.columnIndex="1" prefHeight="35"/>

        </GridPane>

        <!-- ================== BUTTONS ================== -->
        <HBox spacing="15"
              alignment="CENTER_RIGHT"
              AnchorPane.bottomAnchor="20"
              AnchorPane.rightAnchor="40">

            <children>
                <Button fx:id="btnLuu" text="OK" prefWidth="90" prefHeight="35" onAction="#onSave"/>
                <Button fx:id="btnHuy" text="Hủy" prefWidth="90" prefHeight="35" onAction="#close"/>
            </children>

        </HBox>

    </children>

</AnchorPane>
