<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane styleClass="root" stylesheets="@ChonBan.css"
            xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.quanlyquancaphe.controllers.employee.ChonBanController"
            AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
            AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">

    <children>
        <!-- Thanh tiêu đề -->
        <HBox alignment="CENTER" styleClass="hbox"
              AnchorPane.topAnchor="14.0" AnchorPane.leftAnchor="15.0"
              AnchorPane.rightAnchor="15.0" prefHeight="66.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <children>
                <Text text="Chọn bàn">
                    <font>
                        <Font name="System Bold" size="34.0"/>
                    </font>
                </Text>
            </children>
        </HBox>

        <!-- Khu vực bảng và combobox -->
        <AnchorPane AnchorPane.topAnchor="100.0" AnchorPane.leftAnchor="20.0"
                    AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0">

            <children>
                <TableView fx:id="tableListBan" AnchorPane.topAnchor="60.0"
                           AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                           AnchorPane.bottomAnchor="0.0">
                    <columns>
                        <TableColumn fx:id="colMaBan" text="Mã bàn" prefWidth="150"/>
                        <TableColumn fx:id="colViTri" text="Vị trí" prefWidth="150"/>
                        <TableColumn fx:id="colTrangThai" text="Trạng thái" prefWidth="170"/>
                        <TableColumn fx:id="colSoGhe" text="Số ghế" prefWidth="150"/>
                        <TableColumn fx:id="colGhiChu" text="Ghi chú" prefWidth="300"/>
                    </columns>
                </TableView>

                <Label text="Trạng thái:" layoutY="10.0" layoutX="10.0"
                       styleClass="label-x">
                    <font>
                        <Font name="System Bold" size="12.0"/>
                    </font>
                </Label>

                <ComboBox fx:id="cbTrangThai" layoutY="10.0" layoutX="90.0"
                          prefWidth="120"/>
                <ComboBox fx:id="cbViTri" layoutY="10.0" layoutX="250.0"
                          prefWidth="120"/>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>


