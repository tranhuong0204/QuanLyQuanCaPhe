<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.quanlyquancaphe.controllers.employee.HoaDonController">

    <!-- Bên trái: hóa đơn -->
    <left>
        <VBox fx:id="hoaDonPane" prefWidth="500" spacing="10.0" style=" -fx-background-color: #d7b39a">
            <Label alignment="CENTER" prefHeight="30.0" prefWidth="489.0" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="HÓA ĐƠN" />
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold" text="DANH SÁCH MÓN" />
            <ListView fx:id="listHoaDon" prefHeight="300" />
            <Label fx:id="tongTienLabel" text="Tổng: 0đ" />
            <HBox spacing="10">
                <Label text="Tiền khách đưa:" />
                <TextField fx:id="tienKhachDuaField" prefWidth="100" />
            </HBox>
            <Label fx:id="tienThuaLabel" text="Tiền thừa: 0đ" />
            <Button onAction="#handleThanhToan" text="THANH TOÁN" />
        </VBox>
    </left>
    <!-- Bên phải: danh sách sản phẩm -->
    <right>
        <ScrollPane fx:id="scrollPane" fitToWidth="true" prefWidth="600.0" stylesheets="@SanPham.css" />
    </right>


</BorderPane>
